{
    "paths": {
        "bin_dir": "/data/track-ml/eramia/compiled/",
        "save_dir": "results",
        "log_dir": "logs"
    },
    "data": {
        "filename": "/data/track-ml/eramia/dataset/eta-05_05.csv",
        "train_split": 0.80,
        "normalise": true,
        "cylindrical": true,
        "num_hits": 10
    },
    "training": {
        "epochs": 10,
        "batch_size": 6,
        "save_model": true,
        "load_model": false,
        "use_gpu": true,
        "show_metrics": false           
    },
    "model": {
        "name": "lstm",
        "loss": "mse",
        "metrics": ["mae","acc"],        
        "optimizer": "rmsprop",
        "layers": [
            {
                "type": "lstm",
                "neurons": 800,
                "input_timesteps": 4,
                "input_features": 3,
                "return_seq": true
            },
            {
                "type": "dropout",
                "rate": 0.1
            },
            {
                "type": "lstm",
                "neurons": 800,
                "input_timesteps": 4,
                "input_features": 3,
                "return_seq": false
            },
            {
                "type": "dropout",
                "rate": 0.1
            }, 
            {
                "type": "dense",
                "neurons": 30,
                "activation": "relu"
            },              
            {
                "type": "dense",
                "neurons": 3,
                "activation": "linear"
            }
        ]
    }
}
