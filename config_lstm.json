{
    "paths": {
        "bin_dir": "/data/track-ml/eramia/compiled/",
        "save_dir": "results",
        "log_dir": "logs"
    },
    "data": {
        "filename": "/data/track-ml/eramia/dataset/eta_n0.5-0.5_phi_n0.5-0.5.csv",
        "train_split": 0.70,
        "normalise": true,
        "cylindrical": false,
        "num_hits": 10
    },
    "training": {
        "epochs": 30,
        "batch_size": 64,
        "save_model": true,
        "load_model": true,
        "use_gpu": true,
        "show_metrics": false
    },
    "testing": {
        "type_prediction" : "nearest",
         "normalise": false
    },
    "model": {
        "name": "lstm",
        "loss": "mse",
        "metrics": ["mae","acc"],
        "optimizer": "adam",
        "layers": [
            {
                "type": "lstm",
                "neurons": 800,
                "input_timesteps": 4,
                "input_features": 3,
                "return_seq": true
            },
            {
                "type": "dropout",
                "rate": 0.25
            },
            {
                "type": "lstm",
                "neurons": 800,
                "input_timesteps": 4,
                "input_features": 3,
                "return_seq": false
            },
            {
                "type": "dropout",
                "rate": 0.25
            }, 
            {
                "type": "dense",
                "neurons": 18,
                "activation": "relu"
            },              
            {
                "type": "dense",
                "neurons": 3,
                "activation": "linear"
            }
        ]
    }
}
