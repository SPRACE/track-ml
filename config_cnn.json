{
    "paths": {
        "bin_dir": "/data/track-ml/eramia/compiled/",
        "save_dir": "results",
        "log_dir": "logs"
    },
    "data": {
        "filename": "/data/track-ml/eramia/dataset/eta-05_05.csv",
        "train_split": 0.80,
        "normalise": true,
        "cylindrical": false,
        "num_hits": 10        
    },
    "training": {
        "epochs": 10,
        "batch_size": 18,
        "save_model": true,
        "load_model": true,
        "use_gpu": true,
        "show_metrics": false
    },
    "testing": {
        "type_prediction" : "normal",
        "normalise": false
    },
    "model": {
        "name": "cnn",
        "loss": "mse",
        "metrics": ["mae","acc"],
        "optimizer": "adam",
        "layers": [
            {
                "type": "cnn",
                "filters": 32,
                "kernel_size": 2,
                "activation": "relu",
                "input_timesteps": 4,
                "input_features": 3
            },
            {
                "type": "maxpooling",
                "pool_size": 2
            },
            {
                "type": "flatten"
            }, 
            {
                "type": "dense",
                "neurons": 18,
                "activation": "relu"
            },              
            {
                "type": "dense",
                "neurons": 3,
                "activation": "linear"
            }
        ]
    }
}
